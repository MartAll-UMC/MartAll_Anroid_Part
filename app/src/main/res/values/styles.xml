<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="layout_search_style">
        <item name="android:layout_marginStart">@dimen/dp_32</item>
        <item name="android:layout_marginEnd">@dimen/dp_32</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/full_charge</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
    </style>

    <!-- textView 밑줄 적용 -->
    <style name="Hyperlink">
        <item name="android:textColor">#5371FF</item>
        <item name="android:background">@drawable/hyperlink_underline</item>
    </style>

    <!-- tablayout 폰트 적용-->
    <style name="tablayout_font" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/pretendardsemibold</item>
        <item name="android:fontFamily">@font/pretendardsemibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 칩 스타일 1-->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 칩 스타일 2-->

    <style name="ChipStyle2" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 칩 스타일 3-->

    <style name="ChipStyle3" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 칩 스타일 4-->
    
    <style name="ChipStyle4" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 체크박스 스타일 -->

    <style name="CheckboxStyle" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>



</resources>