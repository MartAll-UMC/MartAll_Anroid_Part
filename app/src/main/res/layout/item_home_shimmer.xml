<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="12dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_shimmer_img_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/home_shimmer_product_img_iv"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitCenter"
            android:background="@color/grey200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/home_shimmer_product_name_tv"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/grey200"
        app:layout_constraintTop_toBottomOf="@id/home_shimmer_img_cv" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/product_price_tv"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/grey200"
        app:layout_constraintTop_toBottomOf="@id/home_shimmer_product_name_tv"
        app:layout_goneMarginTop="9dp" />

    <LinearLayout
        android:id="@+id/home_shimmer_product_btn_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home_shimmer_product_like_ib"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/grey200"/>

        <ImageButton
            android:id="@+id/home_shimmer_product_bag_ib"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:background="@color/grey200"/>
    </LinearLayout>


</LinearLayout>