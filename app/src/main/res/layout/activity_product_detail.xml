<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.store.ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_12"
            android:src="@drawable/ic_arrow_left_32dp"
            android:layout_margin="14dp" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품 상세"
            android:textSize="20sp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/pretendardbold"
            app:layout_constraintStart_toEndOf="@id/back_ic"
            app:layout_constraintTop_toTopOf="@id/back_ic" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/post_image_iv"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_item_banana_360dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

<!--            <ImageView-->
<!--                android:id="@+id/mart_profile_iv"-->
<!--                android:layout_width="60dp"-->
<!--                android:layout_height="60dp"-->
<!--                android:src="@drawable/mart_profil_iv"-->
<!--                android:layout_margin="20dp"-->
<!--                app:layout_constraintTop_toBottomOf="@id/post_image_iv"-->
<!--                app:layout_constraintStart_toStartOf="parent" />-->

            <TextView
                android:id="@+id/mart_profile_iv"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_mart_profile_52dp"
                android:gravity="center"
                android:text="마트명"
                android:textAppearance="@style/xsSemiBold"
                android:textColor="@color/primary500"
                app:layout_constraintTop_toBottomOf="@id/post_image_iv"
                app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/mart_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마트명"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/pretendardbold"
                    app:layout_constraintTop_toTopOf="@id/mart_profile_iv"
                    app:layout_constraintBottom_toTopOf="@id/mart_hashtag_list_tv"
                    app:layout_constraintStart_toEndOf="@id/mart_profile_iv"/>

                <LinearLayout
                    android:id="@+id/mart_hashtag_list_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@id/mart_name_tv"
                    app:layout_constraintTop_toBottomOf="@id/mart_name_tv"
                    app:layout_constraintBottom_toTopOf="@id/mart_hashtag_list_tv" >

                    <TextView
                        android:id="@+id/mart_hashtag_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#육아"
                        android:textSize="12sp"
                        android:textColor="#B9B9B9"
                        android:fontFamily="@font/pretendardregular"/>

    <!--                <TextView-->
<!--                    android:id="@+id/mart_hashtag_tv2"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="#뷰티"-->
<!--                    android:textSize="12sp"-->
<!--                    android:textColor="#B9B9B9"-->
<!--                    android:layout_marginLeft="5dp"-->
<!--                    android:fontFamily="@font/pretendardregular"/>-->

<!--                <TextView-->
<!--                    android:id="@+id/mart_hashtag_tv3"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="#스포츠"-->
<!--                    android:textSize="12sp"-->
<!--                    android:textColor="#B9B9B9"-->
<!--                    android:layout_marginLeft="5dp"-->
<!--                    android:fontFamily="@font/pretendardregular"/>-->

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bookmark_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="단골 추가"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_primary400_r20"
                app:layout_constraintTop_toTopOf="@id/mart_profile_iv"
                app:layout_constraintBottom_toBottomOf="@id/mart_profile_iv"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/follower_visiter_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/mart_name_tv"
                app:layout_constraintTop_toBottomOf="@id/mart_hashtag_list_tv"
                app:layout_constraintBottom_toBottomOf="@id/mart_profile_iv" >

                <TextView
                    android:id="@+id/follower_guide_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="단골 수 "
                    android:textSize="10sp"
                    android:fontFamily="@font/pretendardregular"/>

                <TextView
                    android:id="@+id/follower_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="10sp"
                    android:fontFamily="@font/pretendardregular"/>

                <TextView
                    android:id="@+id/divide_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="|"
                    android:textSize="10sp"
                    android:fontFamily="@font/pretendardregular"/>

                <TextView
                    android:id="@+id/liked_guide_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="상품 찜 수 "
                    android:textSize="10sp"
                    android:fontFamily="@font/pretendardregular"/>

                <TextView
                    android:id="@+id/liked_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textSize="10sp"
                    android:fontFamily="@font/pretendardregular"/>

            </LinearLayout>

            <TextView
                android:id="@+id/product_category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="과일&amp;채소"
                android:textColor="@color/grey500"
                android:textSize="12sp"
                android:fontFamily="@font/pretendardregular"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/mart_profile_iv"
                app:layout_constraintTop_toBottomOf="@id/mart_profile_iv" />

            <TextView
                android:id="@+id/product_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="돌 바나나 1.2kg 1송이"
                android:textSize="14sp"
                android:fontFamily="@font/pretendardmedium"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/product_category_tv"
                app:layout_constraintTop_toBottomOf="@id/product_category_tv" />

            <TextView
                android:id="@+id/product_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000"
                android:textSize="20sp"
                android:fontFamily="@font/pretendardbold"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/product_name_tv"
                app:layout_constraintTop_toBottomOf="@id/product_name_tv" />

            <TextView
                android:id="@+id/price_guide_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textSize="20sp"
                android:fontFamily="@font/pretendardregular"
                app:layout_constraintStart_toEndOf="@id/product_price_tv"
                app:layout_constraintTop_toTopOf="@id/product_price_tv"
                app:layout_constraintBottom_toBottomOf="@id/product_price_tv"/>

            <TextView
                android:id="@+id/product_detail_guide_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품 상세 정보"
                android:textSize="16sp"
                android:fontFamily="@font/pretendardsemibold"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@id/price_guide_tv"
                app:layout_constraintStart_toStartOf="@id/mart_profile_iv" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/product_detail"
                android:scaleType="fitXY"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_gray_square_r8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_detail_guide_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_weight="0.2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/like_btn"
                android:layout_width="18dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_blue_heart"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:onClick="toggleHeart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="찜"
                android:textSize="10dp"
                android:fontFamily="@font/pretendardregular"
                app:layout_constraintStart_toStartOf="@id/like_btn"
                app:layout_constraintEnd_toEndOf="@id/like_btn"
                app:layout_constraintTop_toBottomOf="@id/like_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="135dp"
            android:layout_height="45dp"
            android:text="장바구니"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:fontFamily="@font/pretendardbold"
            android:backgroundTint="@color/white"
            android:layout_weight="0.4"
            android:paddingTop="12dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="135dp"
            android:layout_height="45dp"
            android:text="구매하기"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:fontFamily="@font/pretendardbold"
            android:backgroundTint="@color/primary400"
            android:layout_weight="0.4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

</LinearLayout>