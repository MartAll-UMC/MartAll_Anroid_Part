<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/categorylist_arrow_back_ib"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="26dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/categorylist_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스낵"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="@font/pretendardsemibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <View
        android:id="@+id/categorylist_line_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"
        app:layout_constraintTop_toBottomOf="@id/categorylist_status_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />
    
    <ImageButton
        android:id="@+id/categorylist_search_ib"
        android:layout_width="26dp"
        android:layout_height="36dp"
        android:src="@drawable/categorysearch"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="26dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/categorylist_status_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 XXX건"
        android:textSize="18sp"
        android:fontFamily="@font/pretendardsemibold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/categorylist_line_v"
        app:layout_constraintStart_toStartOf="@id/categorylist_arrow_back_ib"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/categorylist_filter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필터"
        android:textSize="16sp"
        android:fontFamily="@font/pretendardregular"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/categorylist_status_tv_1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="39dp"/>

    <ImageButton
        android:id="@+id/categorylist_filter_ib"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/category_filter"
        app:layout_constraintTop_toTopOf="@id/categorylist_filter_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="18dp"/>

    <include layout="@layout/item_categorylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categorylist_ic"
        app:layout_constraintTop_toBottomOf="@id/categorylist_status_tv_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>