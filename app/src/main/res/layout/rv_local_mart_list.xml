<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/local_mart_Item">

    <ImageView
        android:id="@+id/mart_profile_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/mart_profil_iv"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mart_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마트명"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/mart_profile_iv"
        app:layout_constraintStart_toEndOf="@id/mart_profile_iv"/>

    <LinearLayout
        android:id="@+id/mart_hashtag_list_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/mart_name_tv"
        app:layout_constraintTop_toBottomOf="@id/mart_name_tv">

        <TextView
            android:id="@+id/mart_hashtag_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#육아"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mart_hashtag_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#뷰티"
            android:textSize="20dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/mart_hashtag_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식품"
            android:textSize="20dp"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bookmark_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="즐겨찾기"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/mart_name_tv"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/follower_visiter_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/mart_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/mart_profile_iv" >

        <TextView
            android:id="@+id/follower_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로워 수 0"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/visiter_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방문자 수 0"
            android:textSize="15dp"
            android:layout_marginLeft="8dp" />

    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarFadeDuration="@integer/material_motion_duration_long_2"
        android:scrollbarSize="8dp"
        android:scrollbarThumbHorizontal="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="@id/mart_profile_iv"
        app:layout_constraintTop_toBottomOf="@id/follower_visiter_count_tv">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/group_participants_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/rv_local_mart_property_list" />
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>