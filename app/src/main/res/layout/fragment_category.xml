<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textAppearance="@style/xlBold"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/category_search_ic"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_search_24dp"
        android:background="@color/transparent"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="@id/category_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
    android:id="@+id/category_cart_ic"
    android:layout_width="26dp"
    android:layout_height="26dp"
    android:src="@drawable/ic_cart_36dp"
    android:background="@color/transparent"
    android:layout_marginEnd="@dimen/dp_16"
    app:layout_constraintTop_toTopOf="@id/category_tv"
    app:layout_constraintEnd_toStartOf="@id/category_search_ic"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/category_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/category_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/lSemiBold">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체">

        </com.google.android.material.tabs.TabItem>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과일&amp;채소">

        </com.google.android.material.tabs.TabItem>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수산">

        </com.google.android.material.tabs.TabItem>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정육">

        </com.google.android.material.tabs.TabItem>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="간식">

        </com.google.android.material.tabs.TabItem>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생활용품">

        </com.google.android.material.tabs.TabItem>
    </com.google.android.material.tabs.TabLayout>

    <ImageButton
        android:id="@+id/category_filter_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_filter_20dp"
        android:background="@color/transparent"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/category_tl"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/category_filter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필터"
        android:textAppearance="@style/mMedium"
        android:textColor="@color/grey700"
        android:layout_marginEnd="@dimen/dp_4"
        app:layout_constraintTop_toTopOf="@id/category_filter_ic"
        app:layout_constraintEnd_toStartOf="@id/category_filter_ic"/>

    <ImageButton
        android:id="@+id/category_new_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down_20dp"
        android:tint="@color/primary400"
        android:background="@color/transparent"
        android:layout_marginEnd="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="@id/category_filter_ic"
        app:layout_constraintEnd_toStartOf="@id/category_filter_tv"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/category_new_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최신순"
        android:textAppearance="@style/mMedium"
        android:textColor="@color/primary400"
        android:layout_marginEnd="@dimen/dp_4"
        app:layout_constraintEnd_toStartOf="@id/category_new_ic"
        app:layout_constraintTop_toTopOf="@id/category_filter_tv"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/category_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/category_new_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>