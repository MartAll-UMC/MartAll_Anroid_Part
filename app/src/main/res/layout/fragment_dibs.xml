<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/shop_dibs_layout"
        layout="@layout/layout_dibs_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/dibs_content_tb"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:tabIndicatorFullWidth="false"
        app:tabTextColor="@color/black"
        app:tabSelectedTextColor="@color/primary400"
        app:tabIndicatorColor="@color/primary400"
        app:tabRippleColor="@color/transparent"
        app:tabTextAppearance="@style/mSemiBold"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/shop_dibs_layout"
        app:layout_constraintStart_toStartOf="@+id/shop_dibs_layout"
        app:layout_constraintTop_toBottomOf="@+id/shop_dibs_layout"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/dibs_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/dibs_content_tb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>