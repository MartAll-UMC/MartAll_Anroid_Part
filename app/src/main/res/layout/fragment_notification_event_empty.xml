<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/event_empty_error_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img_alarm_140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="130dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/event_empty_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앗 진행 중인 이벤트가 없어요!"
        android:textAppearance="@style/lSemiBold"
        android:textColor="@color/grey800"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/event_empty_error_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/event_empty_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 분들을 위한"
        android:textAppearance="@style/mMedium"
        android:textColor="@color/grey700"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@id/event_empty_1_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/event_empty_3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이벤트를 준비하고 있어요!"
        android:textAppearance="@style/mMedium"
        android:textColor="@color/grey700"
        app:layout_constraintTop_toBottomOf="@id/event_empty_2_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
