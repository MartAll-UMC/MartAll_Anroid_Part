<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:background="@android:color/transparent"
            android:src="@drawable/location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/logo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardmedium"
            android:gravity="center"
            android:text="나의 위치"
            android:textColor="#5371ff"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/logo_iv"
            app:layout_constraintTop_toTopOf="@+id/logo_iv" />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardsemibold"
            android:gravity="center"
            android:text="판교역로 166"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/logo_iv"
            app:layout_constraintTop_toBottomOf="@id/logo_tv"/>

        <ImageButton
            android:id="@+id/menu_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/shoping_cart_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:src="@drawable/shopping_cart"
            android:background="@android:color/transparent"
            app:layout_constraintRight_toLeftOf="@id/menu_ib"
            app:layout_constraintTop_toTopOf="@id/logo_iv" />

        <ImageView
            android:id="@+id/ad_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/temp_ad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo_iv" />


        <ImageButton
            android:id="@+id/logo_big_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/logo_big"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ad_iv" />

        <include layout="@layout/item_search_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_bar_sb"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/ad_iv"
            app:layout_constraintStart_toEndOf="@id/logo_big_iv"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/home_merchandise_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardsemibold"
            android:gravity="center"
            android:text="새로 나온 상품"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/search_bar_sb"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/home_merchandise_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardsemibold"
            android:gravity="center"
            android:text="더보기"
            android:textColor="#919191"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/home_merchandise_list_tv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <include layout="@layout/item_merchandise_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/home_merchandise_more_tv"
            android:id="@+id/item_merchandise_list_ic"
            android:layout_marginTop="16dp"/>

        <ImageView
            android:id="@+id/home_ad2_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ad2"
            android:layout_marginTop="28dp"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/item_merchandise_list_ic"/>

        <include layout="@layout/item_recommend_mart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/home_ad2_iv"
            android:layout_marginTop="36dp"
            android:id="@+id/item_recommend_mart_ic"/>

        <include layout="@layout/item_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_recommend_mart_ic"
            android:id="@+id/item_terms_ic"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>