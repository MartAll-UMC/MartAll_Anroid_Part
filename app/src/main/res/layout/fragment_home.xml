<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="54dp"
            android:background="@color/white"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/logo_tv"
            android:layout_width="69dp"
            android:layout_height="29dp"
            android:fontFamily="@font/pretendardsemibold"
            android:gravity="center"
            android:text="마트올"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/logo_iv"
            app:layout_constraintTop_toTopOf="@+id/logo_iv" />

        <ImageButton
            android:id="@+id/menu_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="17dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/shoping_cart_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:src="@drawable/shopping_cart"
            android:background="@color/white"
            app:layout_constraintRight_toLeftOf="@id/menu_ib"
            app:layout_constraintTop_toTopOf="@id/logo_iv" />

        <ImageView
            android:id="@+id/ad_iv"
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/temp_ad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo_iv" />


        <ImageButton
            android:id="@+id/logo_big_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/logo_big"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ad_iv" />

        <com.google.android.material.search.SearchBar
            android:id="@+id/search_bar_sb"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/logo_big_iv"
            app:layout_constraintTop_toBottomOf="@id/ad_iv" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/recommend_merchandise_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardsemibold"
            android:gravity="center"
            android:text="마트올 AI 추천상품"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_bar_sb"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/recommend_merchandise_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardsemibold"
            android:gravity="center"
            android:text="더보기"
            android:textColor="#919191"
            android:textSize="14sp"
            android:layout_marginEnd="37dp"
            android:layout_marginTop="41dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_bar_sb"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:background="@color/white"
            android:layout_marginTop="44dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="18.5dp"
            app:layout_constraintStart_toEndOf="@id/recommend_merchandise_more_tv"
            app:layout_constraintTop_toBottomOf="@id/search_bar_sb"/>

        <HorizontalScrollView
            android:id="@+id/recommend_merchandise_hs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recommend_merchandise_tv">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/home_merchandise_iv"
                            android:layout_width="154dp"
                            android:layout_height="154dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/merchandise"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>




                        <TextView
                            android:id="@+id/home_merchandise_tv"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:text="BEST | 바이오더마 시카비오 포마드 100ml"
                            android:fontFamily="@font/pretendardregular"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            app:layout_constraintTop_toBottomOf="@id/home_merchandise_iv"/>

                        <TextView
                            android:id="@+id/home_merchandise_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="28,000원"
                            android:fontFamily="@font/pretendardbold"
                            app:layout_goneMarginTop="9dp"
                            android:textSize="13sp"
                            android:textColor="#000000"
                            app:layout_constraintTop_toBottomOf="@id/home_merchandise_tv"/>

                        <ImageButton
                            android:id="@+id/home_favorite_ib"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/favorite"
                            android:background="@color/white"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="3dp"
                            app:layout_constraintTop_toBottomOf="@id/home_merchandise_price_tv"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <ImageButton
                            android:id="@+id/home_shopping_bag_ib"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shopping_bag"
                            android:background="@color/white"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="40dp"
                            app:layout_constraintTop_toBottomOf="@id/home_merchandise_price_tv"
                            app:layout_constraintStart_toStartOf="@id/home_favorite_ib"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>




                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/home_merchandise_2_iv"
                        android:layout_width="154dp"
                        android:layout_height="154dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/merchandise"/>

                    <TextView
                        android:id="@+id/home_merchandise_2_tv"
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:text="BEST | 바이오더마 시카비오 포마드 100ml"
                        android:fontFamily="@font/pretendardregular"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        app:layout_constraintTop_toBottomOf="@id/home_merchandise_2_iv"/>

                    <TextView
                        android:id="@+id/home_merchandise_price_2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="28,000원"
                        android:fontFamily="@font/pretendardbold"
                        app:layout_goneMarginTop="9dp"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        app:layout_constraintTop_toBottomOf="@id/home_merchandise_2_tv"/>

                    <ImageButton
                        android:id="@+id/home_favorite_2_ib"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/favorite"
                        android:background="@color/white"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="3dp"
                        app:layout_constraintTop_toBottomOf="@id/home_merchandise_price_2_tv"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageButton
                        android:id="@+id/home_shopping_bag_2_ib"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shopping_bag"
                        android:background="@color/white"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintTop_toBottomOf="@id/home_merchandise_price_2_tv"
                        app:layout_constraintStart_toStartOf="@id/home_favorite_2_ib"/>

                </androidx.constraintlayout.widget.ConstraintLayout>




            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/home_merchandise_3_iv"
                            android:layout_width="154dp"
                            android:layout_height="154dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/merchandise"/>

                        <TextView
                            android:id="@+id/home_merchandise_3_tv"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:text="BEST | 바이오더마 시카비오 포마드 100ml"
                            android:fontFamily="@font/pretendardregular"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            app:layout_constraintTop_toBottomOf="@id/home_merchandise_3_iv"/>

                        <TextView
                            android:id="@+id/home_merchandise_price_3_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="28,000원"
                            android:fontFamily="@font/pretendardbold"
                            app:layout_goneMarginTop="9dp"
                            android:textSize="13sp"
                            android:textColor="#000000"
                            app:layout_constraintTop_toBottomOf="@id/home_merchandise_3_tv"/>

                        <ImageButton
                            android:id="@+id/home_favorite_3_ib"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/favorite"
                            android:background="@color/white"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="3dp"
                            app:layout_constraintTop_toBottomOf="@id/home_merchandise_price_3_tv"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <ImageButton
                            android:id="@+id/home_shopping_bag_3_ib"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shopping_bag"
                            android:background="@color/white"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="40dp"
                            app:layout_constraintTop_toBottomOf="@id/home_merchandise_price_3_tv"
                            app:layout_constraintStart_toStartOf="@id/home_favorite_3_ib"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/home_merchandise_4_iv"
                            android:layout_width="154dp"
                            android:layout_height="154dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/merchandise"/>

                        <TextView
                            android:id="@+id/home_merchandise_4_tv"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:text="BEST | 바이오더마 시카비오 포마드 100ml"
                            android:fontFamily="@font/pretendardregular"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            app:layout_constraintTop_toBottomOf="@id/home_merchandise_4_iv"/>

                        <TextView
                            android:id="@+id/home_merchandise_price_4_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="28,000원"
                            android:fontFamily="@font/pretendardbold"
                            app:layout_goneMarginTop="9dp"
                            android:textSize="13sp"
                            android:textColor="#000000"
                            app:layout_constraintTop_toBottomOf="@id/home_merchandise_4_tv"/>

                        <ImageButton
                            android:id="@+id/home_favorite_4_ib"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/favorite"
                            android:background="@color/white"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="3dp"
                            app:layout_constraintTop_toBottomOf="@id/home_merchandise_price_4_tv"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <ImageButton
                            android:id="@+id/home_shopping_bag_4_ib"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shopping_bag"
                            android:background="@color/white"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="40dp"
                            app:layout_constraintTop_toBottomOf="@id/home_merchandise_price_4_tv"
                            app:layout_constraintStart_toStartOf="@id/home_favorite_4_ib"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>




                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>








    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>