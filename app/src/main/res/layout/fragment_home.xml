<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tb_home"
        layout="@layout/layout_home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb_home">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/home_ad_vp"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/logo_big_iv"
                android:layout_width="26dp"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_logo_martall26"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_ad_vp" />

            <include
                android:id="@+id/home_search_bar_sb"
                layout="@layout/item_search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@id/logo_big_iv"
                app:layout_constraintStart_toEndOf="@id/logo_big_iv"
                app:layout_constraintTop_toTopOf="@id/logo_big_iv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/home_merchandise_list_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="새로 나온 상품"
                android:textAppearance="@style/xlBold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_search_bar_sb" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/home_merchandise_more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:text="더보기"
                android:textAppearance="@style/sMedium"
                android:textColor="@color/grey400"
                app:layout_constraintBottom_toBottomOf="@id/home_merchandise_list_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/home_merchandise_list_tv" />

            <include
                android:id="@+id/item_merchandise_list_ic"
                layout="@layout/item_merchandise_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/home_merchandise_more_tv" />

            <ImageView
                android:id="@+id/home_ad2_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/img_360_banner_1"
                app:layout_constraintTop_toBottomOf="@id/item_merchandise_list_ic" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/home_mart_list_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:text="민지님만을 위한 추천 마트"
                android:textAppearance="@style/xlBold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_ad2_iv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/home_mart_more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="더보기"
                android:textAppearance="@style/sMedium"
                android:textColor="@color/grey400"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/home_mart_list_tv"
                app:layout_constraintBottom_toBottomOf="@id/home_mart_list_tv"
                />

            <include
                android:id="@+id/item_recommend_mart_ic"
                layout="@layout/item_recommend_mart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="65dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_mart_list_tv" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>