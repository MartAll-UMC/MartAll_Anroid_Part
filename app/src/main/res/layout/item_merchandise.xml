<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/home_merchandise_iv"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:scaleType="fitCenter"
        android:src="@drawable/merchandise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>




    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/home_merchandise_tv"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:text="BEST | 바이오더마 시카비오 포마드 100ml"
        android:fontFamily="@font/pretendardmedium"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/home_merchandise_iv"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/home_merchandise_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="28,000원"
        android:fontFamily="@font/pretendardbold"
        app:layout_goneMarginTop="9dp"
        android:textSize="13sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/home_merchandise_tv"/>

    <ImageButton
        android:id="@+id/home_favorite_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/favorite"
        android:background="@android:color/transparent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toBottomOf="@id/home_merchandise_price_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/home_shopping_bag_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shopping_bag"
        android:background="@android:color/transparent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/home_merchandise_price_tv"
        app:layout_constraintStart_toStartOf="@id/home_favorite_ib"/>

</androidx.constraintlayout.widget.ConstraintLayout>