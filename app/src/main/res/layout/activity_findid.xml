<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/find_id_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="아이디 찾기"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/find_id_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/find_id_title_tv"/>

    <EditText
        android:id="@+id/sign_up_name_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_border"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:hint="  이름을 입력해 주세요"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find_id_name_tv" />

    <TextView
        android:id="@+id/sign_up_phone_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="휴대폰번호"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/sign_up_name_et"/>

    <EditText
        android:id="@+id/sign_up_phone_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_border"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="105dp"
        android:hint="  휴대전화 번호를 입력해 주세요"
        android:inputType="text"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sign_up_phone_bt"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_phone_tv" />

    <Button
        android:id="@+id/sign_up_phone_bt"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/button_background_martall_color"
        android:text="인증번호"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_phone_et"
        app:layout_constraintStart_toEndOf="@id/sign_up_verify_et"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/sign_up_verify_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인증번호"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/sign_up_phone_et"/>

    <EditText
        android:id="@+id/sign_up_verify_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_border"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="105dp"
        android:hint="  인증번호를 입력해 주세요"
        android:inputType="text"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@id/sign_up_verify_bt"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_verify_tv"/>

    <Button
        android:id="@+id/sign_up_verify_bt"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/button_background_martall_color"
        android:text="재발송"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_verify_et"
        app:layout_constraintStart_toEndOf="@id/sign_up_verify_et"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>