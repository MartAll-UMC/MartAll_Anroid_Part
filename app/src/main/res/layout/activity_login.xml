<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".view.login.LoginActivity">

    <ImageView
        android:id="@+id/logo_iv"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_logo_login_240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/kakao_login_btn"/>

    <LinearLayout
        android:id="@+id/kakao_login_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_kakao_border8"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/contatct_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/kakao_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_kakao_28dp" />

        <TextView
            android:id="@+id/kakao_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="카카오로 계속하기"
            android:textAppearance="@style/mMedium"
             />

    </LinearLayout>

    <TextView
        android:id="@+id/contatct_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:text="마트올에게 문의하기"
        android:textAppearance="@style/sRegular"
        android:textColor="@color/grey700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>