<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/title_orderlist_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/btn_back_button" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="주문 내역"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/btn_search_button"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/orderlist_bg_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/img_orderlist_background"
        app:layout_constraintTop_toBottomOf="@id/title_orderlist_layout"
        />

    <LinearLayout
        android:id="@+id/orderlist_subtitle_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:layout_marginStart="40dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orderlist_bg_1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진행상황"
            android:textSize="25dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/orderlist_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderlist_subtitle_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="주문요청"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#5371FF"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="주문승인"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#5371FF"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="포장 중"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="주문취소"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="주문반려"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/orderlist_date_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderlist_bg_1">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_orderlist_date_1week" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/btn_orderlist_date_1month" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/btn_orderlist_date_3month" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/btn_orderlist_date_6month" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/btn_orderlist_date_1year" />
    </LinearLayout>

    <ImageView
        android:id="@+id/orderlist_search_date_1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_orderlist_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderlist_date_layout"/>

    <Button
        android:layout_width="19dp"
        android:layout_height="22dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/btn_orderlist_date"
        app:layout_constraintTop_toTopOf="@id/orderlist_search_date_1"
        app:layout_constraintBottom_toBottomOf="@id/orderlist_search_date_1"
        app:layout_constraintEnd_toEndOf="@id/orderlist_search_date_1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/orderlist_search_date_1"
        app:layout_constraintEnd_toStartOf="@id/orderlist_search_date_2"
        app:layout_constraintTop_toTopOf="@id/orderlist_search_date_1"
        app:layout_constraintBottom_toBottomOf="@id/orderlist_search_date_1"/>


    <ImageView
        android:id="@+id/orderlist_search_date_2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/button_orderlist_border"
        app:layout_constraintStart_toEndOf="@id/orderlist_search_date_1"
        app:layout_constraintTop_toBottomOf="@+id/orderlist_date_layout"/>

    <Button
        android:layout_width="19dp"
        android:layout_height="22dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/btn_orderlist_date"
        app:layout_constraintTop_toTopOf="@id/orderlist_search_date_2"
        app:layout_constraintBottom_toBottomOf="@id/orderlist_search_date_2"
        app:layout_constraintEnd_toEndOf="@id/orderlist_search_date_2"/>

    <ImageView
        android:id="@+id/orderlist_search_click"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/button_orderlist_click"
        app:layout_constraintStart_toEndOf="@id/orderlist_search_date_2"
        app:layout_constraintTop_toBottomOf="@+id/orderlist_date_layout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조회"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/orderlist_search_click"
        app:layout_constraintEnd_toEndOf="@id/orderlist_search_click"
        app:layout_constraintTop_toTopOf="@id/orderlist_search_click"
        app:layout_constraintBottom_toBottomOf="@id/orderlist_search_click"/>

    <View
        android:id="@+id/orderlist_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3E3E3"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/orderlist_search_click"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총      건"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/orderlist_line"
        app:layout_constraintStart_toStartOf="@id/orderlist_line"/>

    <Button
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:text="전체 ▼"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-15dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/orderlist_line"
        app:layout_constraintTop_toBottomOf="@id/orderlist_line" />



    <ImageView
        android:id="@+id/orderlist_bg_2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/img_orderlist_background"
        app:layout_constraintTop_toBottomOf="@id/orderlist_line"/>

    <TextView
        android:id="@+id/orderlist_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023.07.22 14:30:11"
        android:textColor="#959595"
        app:layout_constraintStart_toStartOf="@+id/orderlist_bg_2"
        app:layout_constraintTop_toTopOf="@+id/orderlist_bg_2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/orderlist_order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문취소"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="@+id/orderlist_bg_2"
        app:layout_constraintTop_toBottomOf="@+id/orderlist_date_time" />

    <ImageView
        android:id="@+id/orderlist_product_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/img_martshop_img"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="@+id/orderlist_bg_2"
        app:layout_constraintTop_toBottomOf="@+id/orderlist_order_state"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/orderlist_mart_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마트명"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/orderlist_product_image"
        app:layout_constraintTop_toTopOf="@id/orderlist_product_image"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/orderlist_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제품명"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/orderlist_mart_name"
        app:layout_constraintTop_toBottomOf="@id/orderlist_mart_name"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/orderlist_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문 금액 : 26,000원"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/orderlist_product_name"
        app:layout_constraintTop_toBottomOf="@id/orderlist_product_name"
        android:layout_marginTop="4dp" />




</androidx.constraintlayout.widget.ConstraintLayout>
